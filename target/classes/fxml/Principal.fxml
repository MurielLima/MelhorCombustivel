<AnchorPane id="AnchorPane" minWidth="480.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.PrincipalController">
   <children>
      <VBox minWidth="480.0" prefHeight="200.0" prefWidth="320.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Custo x Beneficio Combustível">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <VBox alignment="CENTER" style="-fx-border-radius: 5; -fx-border-color: #BDBDBD; -fx-background-color: #BDBDBD;">
               <children>
                  <HBox alignment="CENTER" spacing="80.0">
                     <children>
                        <Label text="Valor(R$)" />
                        <Label text="Rendimento Km/L" />
                     </children>
                     <VBox.margin>
                        <Insets left="140.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" spacing="30.0">
                     <children>
                        <Label text="Gasolina:" />
                        <TextField fx:id="txtFldGasolinaValor" />
                        <TextField fx:id="txtFldGasolinaRendimento" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" spacing="30.0">
                     <children>
                        <Label text="Álcool:">
                           <padding>
                              <Insets right="12.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="txtFldAlcoolValor" />
                        <TextField fx:id="txtFldAlcoolRendimento" />
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Label fx:id="lblResultado">
                           <font>
                              <Font name="Arial Bold" size="14.0" />
                           </font>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <HBox alignment="BOTTOM_RIGHT" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#btnFecharClick" text="Fechar" />
                  <Button fx:id="btnCalcular" mnemonicParsing="false" onAction="#btnCalcularClick" text="Calcular" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" right="80.0" top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
